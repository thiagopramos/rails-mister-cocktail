<div class="container">
  <% @cocktails.each do |cocktail| %>
    <div class="col-md-4">
      <div class="card" style="margin: 15px; background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= get_thumb_from_google(cocktail.name) %>');">

        <div class="card-description">
          <h2><%= cocktail.name %></h2>

        </div>
        <%= link_to "", cocktail_path(cocktail), {class:"card-link"} %>
      </div>
    </div>
  <% end %>

  <br/>
</div>
